generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int    @id @default(autoincrement())
  username String @unique
  password String
  role     String // "superadmin", "medecin", "laborantin"
}


model Donor {
  id        Int        @id @default(autoincrement())
  name      String
  bloodType String
  phone     String?
  email     String?    @unique
  createdAt DateTime   @default(now())
  BloodBags BloodBag[]
}

model BloodBag {
  id          Int      @id @default(autoincrement())
  donorId     Int
  donor       Donor    @relation(fields: [donorId], references: [id])
  bloodType   String
  quantity    Int
  collectedAt DateTime @default(now())
  expiresAt   DateTime
  status      String   @default("disponible")

  transfusions Transfusion[] // <--- relation inverse
}

model Patient {
  id            Int           @id @default(autoincrement())
  name          String
  age           Int
  bloodType     String
  phone         String?
  createdAt     DateTime      @default(now())
  transfusions  Transfusion[]
}


model Transfusion {
  id         Int      @id @default(autoincrement())
  date       DateTime @default(now())
  patientId  Int
  bloodBagId Int
  status     String   @default("brouillon") // "brouillon", "finalisée", "annulée"

  patient   Patient   @relation(fields: [patientId], references: [id])
  bloodBag  BloodBag  @relation(fields: [bloodBagId], references: [id])
}
